<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <style>
body{
  background-color: #1a233a;
}
      .card {
  margin: 20px 0;
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 80%;
  padding: 30px;
  background-color: #82E0AA;
  border-radius: 50px;
}

.btn {
    display: inline-block;
    background-color: #ff523b;
    color: #fff;
    border: #ff523b;
    border-radius: 30px;
    padding: 8px 30px;
    margin-top: 20px;
    transition: background 0.5s;
}
.btn:hover{
  background-color: #272e48;
}
.hide{
  display: none;
}
.card:hover{
	transform: translateX(10px);
}
.sidenav {
  height: 100%;
  width: 200px;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  padding-left: 20px;
  padding-right: 20px;
  background-color: #272e48;
  overflow-x: hidden;
  padding-top: 20px;
  margin-right: 5px;
}

.sidenav a {
  padding: 15px 10px 15px 16px;
  margin-bottom: 10px;
  text-decoration: none;
  font-size: 20px;
  border-bottom: 1px solid #ededed73;
  color: #818181;
  display: block;
  border-radius: 20px;
  background: linear-gradient(45deg, #154360, #17202A);
}
.head{
  color: #DC143C;
}
.ques {
  color: #154360;
}
.opt{
  color: #424949;
}
.total{
  color: #CB4335;
}
.sidenav a:hover {
  color: #f1f1f1;
}
.container{
 margin: 20px 260px;
}
  </style>
</head>
<body>
    <div class="sidenav">
        <a href="/dashboard">Dashboard</a>
        <a href="/new">New Poll</a>
        <a href="/comp">Completed Poll</a>
        <a href="/logout">Logout</a>
      </div>

    <div class="container">
        
    <h1 class="head"><%= title %></h1>
    <hr>
    <% records.forEach(function(data) {%>
    <div class="card">
        
          <div class="ques">  <h2><%= data.ques %> </h2> </div>
          <div class="opt"> <h4>   1.  <%= data.opt1 %> &#8594; <%= data.ansOpt1 %> <br>
              2.  <%= data.opt2 %> &#8594; <%= data.ansOpt2 %><br>
              3.  <%= data.opt3 %> &#8594; <%= data.ansOpt3 %> <br></h4></div>
             
          <div class="total">     <strong> Total Votes &#8594; <%= data.ansOpt1 + data.ansOpt2 + data.ansOpt3 %> </strong>  <br></div>
              Published On:-  <%= data.created.toLocaleDateString() %>
              <form action="/delete" method="POST" id="day-form" >
                <div class="hide"><input name="id" value="<%= data._id %>"><label></label></div>
          
              <button class="btn" type="submit" onclick="onClick()">
                Delete
              </button>
            </form>
    </div>
        <%}) %>
    </div>
<script>
  function onClick(){
    window.alert("Poll Deleted Successfully")
  }
</script>
</body>
</html>