    }
    form{
        /* display: flex;
        flex-direction: column;
        gap: 20px;
        max-width: 20%; */
        margin-top: 40px;
    }
    input{
        width: 60%;
        border: 1px solid #25222230;
        border-radius: 10px;
    height: 34px;
    margin-bottom: 20px;
    padding-left: 20px;
    }
    .inputWrap{
        display: flex;
    flex-direction: column;
    align-items: center;
    }
    .submitBtn{
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 30px;
    }
    .btn{
        width: 50%;
